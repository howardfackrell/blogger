<h3> Post a Comment </h3>

<%= form_for @comment do |f| %>
  <%= f.hidden_field :article_id %>
  <p>
    <%= f.label :author %> </br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %> </br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>


<% end %>
