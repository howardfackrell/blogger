<%= form_for @article do |f| %>
  <!-- the labels are marked red if there is an error, would need to make a modification to show the error -->
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p> 

  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p> 


<% end %>